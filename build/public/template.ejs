	<div class="container top-heading">
		<div class="row text-center">
			<h2>The Movie Quiz</h2>
		</div>
		<div class="row" style="margin-bottom:3%;">
			<div class="col-md-12">
				<form method="post" action="/">
					<div id="custom-search-input">
						<div class="input-group col-md-12">
						<input type="text" class="form-control input-lg" placeholder="Try a Celebrity of your own choice...." id="search" name="search"/>
							<span class="input-group-btn">
								<button class="btn btn-info btn-lg" type="submit">
									<i class="glyphicon glyphicon-search"></i>
								</button>
							</span>
						</div>
					</div>
				</form>
			</div>
		</div>

		<div class="row">
			<div class="content">
				<div class="panel panel-success">
					<div class="panel-heading text-center"><h4>How well do you know <%= obj.name %>?</h4></div>
					<div class="panel-body">
						<% var rand = Math.floor(Math.random() * (19 - 0 + 1)) + 0; %>
						<% var random1 = 0; var random2 = 0; %>
						<% do{random1 = Math.floor(Math.random() * (19 - 0 + 1)) + 0;}while(random1 === rand);%>
						<% do{random2 = Math.floor(Math.random() * (19 - 0 + 1)) + 0;}while((random2 === rand) && (random2 === random1)) ; %>
						<% var randTwo = Math.floor	(Math.random() * (2 - 0 + 1)) + 0; %>
						<% var answer = parseInt(obj.content.results[rand].release_date.split("-")[0]) %>
						<% function shff(arr) {
							let i = arr.length;
							while (i > 0) {
								let ind = Math.floor(Math.random() * i);
								i--;
								let z = arr[i];
								arr[i] = arr[ind];
								arr[ind] = z;
							}
							return arr;
						} %>
						<% var z = Math.floor(Math.random() * 3) + 1;%>	
						<% if(z == 1){ %>
							<% var x = [0, 1, 2]%>
							<% shff(x) %>
							<div class="col-md-6">
								<div class="internal">
									<img class="img-responsive img-rounded" alt="Cinque Terre" src="https://image.tmdb.org/t/p/w500<%= obj.content.results[rand].poster_path %>">	
								</div>
							</div>
							<div class="col-md-6">
								<div class="internal">
									<% console.log(obj.name); %>
									<div class="text-center">
										<h4><strong>Q. In what year did <%= obj.name %> appear in <%= obj.content.results[rand].title %>?</strong></h4>
									</div>
									<ol class="list-group">
										<li class="list-group-item text-center list-group-item-primary"><button class="btn btn-lg btn-md btn-info" onClick="ansCheck(<%=answer + x[0]%>, <%=answer%>)" class="ans"><%= answer + x[0] %></button></li>
										<li class="list-group-item text-center list-group-item-primary"><button class="btn btn-lg btn-info" onClick="ansCheck(<%=answer + x[1]%>, <%=answer%>)" class="ans"><%= answer + x[1] %></button></li>
										<li class="list-group-item text-center list-group-item-primary"><button class="btn btn-lg btn-info" onClick="ansCheck(<%=answer + x[2]%>, <%=answer%>)" class="ans"><%= answer + x[2] %></button></li>
									</ol>
									<div class="alert alert-success success_hide">
										<strong class="outcome"></strong>
									</div>
									<div class="alert alert-danger failure_hide">
										<strong class="outcome"></strong>
										<strong class="corAns"></strong>
									</div>
									<button class="btn btn-lg btn-primary btn-md" onClick="reload()" class="plyAgain">Play Again?</button>
								</div>
							</div>
							<% } else if(z==2){%>
								<% var answer_moveie_name = JSON.stringify(obj.content.results[rand].original_title); %>
								<% var wrong_movie_name1 = JSON.stringify(obj.content.results[random1].original_title);%>
								<% var wrong_movie_name2 = JSON.stringify(obj.content.results[random2].original_title);%>
								<% var x = [answer_moveie_name, wrong_movie_name2, wrong_movie_name1]; shff(x); %>
								<div class="col-md-6">
									<div class="internal">
									<img class="img-responsive img-rounded" alt="Cinque Terre" src="https://image.tmdb.org/t/p/w500<%=obj.content.results[rand].backdrop_path %>">	
								</div>
							</div>
							<div class="col-md-6">
								<div class="internal">
									<div class="text-center">
										<h4><strong>Q. What is the title of this movie?</strong></h4>
									</div>
									<ol class="list-group">
										<li class="list-group-item text-center list-group-item-primary"><button class="btn btn-lg btn-info" onClick="ansCheck(<%=x[0] %>, <%=answer_moveie_name %>)"><%= x[0] %></button></li>
										<li class="list-group-item text-center list-group-item-primary"><button class="btn btn-lg btn-info" onClick="ansCheck(<%=x[1]%>, <%=answer_moveie_name %>)"><%= x[1] %></button></li>
										<li class="list-group-item text-center list-group-item-primary"><button class="btn btn-lg btn-info" onClick="ansCheck(<%=x[2]%>, <%=answer_moveie_name%>)"><%= x[2] %></button></li>
									</ol>
									<div class="alert alert-success success_hide">
										<strong class="outcome"></strong>
									</div>
									<div class="alert alert-danger failure_hide">
										<strong class="outcome"></strong>
										<strong class="corAns"></strong>
									</div>
									<button class="btn btn-lg btn-primary" onClick="reload()" class="plyAgain">Play Again?</button>
								</div>
							</div>
							<% }else{ %>
								<% var desc = JSON.stringify(obj.content.results[rand].overview);%>
								<% console.log(desc); %>
								<% var desc_movie = JSON.stringify(obj.content.results[rand].original_title); %>
								<% var wrong_movie_name1 = JSON.stringify(obj.content.results[random1].original_title);%>
								<% var wrong_movie_name2 = JSON.stringify(obj.content.results[random2].original_title);%>
								<% var x = [desc_movie, wrong_movie_name1, wrong_movie_name2]; shff(x); %>
								<div class="col-md-6">
									<div class="text-center" style="padding-top:15%;text-align:justify;">
										<strong><%= desc %></strong>	
									</div>
								</div>
								<div class="col-md-6">
									<div class="internal">
										<div class="text-center">
											<h4><strong>Q. Which movie is best described by this title?</strong></h4>
										</div>
										<ol class="list-group">
											<li class="list-group-item text-center list-group-item-primary"><button class="btn btn-lg btn-info" onClick="ansCheck(<%=x[0] %>, <%=desc_movie %>)"><%= x[0] %></button></li>
											<li class="list-group-item text-center list-group-item-primary"><button class="btn btn-lg btn-info" onClick="ansCheck(<%=x[1]%>, <%=desc_movie %>)"><%= x[1] %></button></li>
											<li class="list-group-item text-center list-group-item-primary"><button class="btn btn-lg btn-info" onClick="ansCheck(<%=x[2]%>, <%=desc_movie %>)"><%= x[2] %></button></li>
										</ol>
										<div class="alert alert-success success_hide">
											<strong class="outcome"></strong>
										</div>
										<div class="alert alert-danger failure_hide">
											<strong class="outcome"></strong>
											<strong class="corAns"></strong>
										</div>
										<button class="btn btn-lg btn-primary" onClick="reload()" class="plyAgain">Play Again?</button>
									</div>
								</div>
								<% } %>
							</div>
						</div>
					</div>
				</div>
				<div class="alert alert-danger">
					<strong>Please Note!</strong> Enter a valid actor name else default Brad Pitt Quiz will be rendered.
				</div>
			</div>
		</div>
